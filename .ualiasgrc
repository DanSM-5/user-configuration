# List folders for quick navigation
# Requires: quick_access=()
qnv () {
  if [ -z "$quick_access" ]; then
    return
  fi
  local selection=$(echo $quick_access | fzf-defaults --preview "bat -pp --color=always <<< \$(echo \"Path: \$(realpath {})\"); ls --color=always -aFL {} | sed '1d;2d'")
  if [ -n "$selection" ]; then
    cd $selection
  fi
}

# List files for quick edit
# Requires: quick_edit
qed () {
  if [ -z "$quick_edit" ]; then
    return
  fi
  local editor="$1"
  local selection=$(echo $quick_edit | fzf-defaults --preview "bat --color=always --style=numbers {}")
  if [ -z "$selection" ]; then
    return
  fi
  if [ -z "$editor" ]; then
    editor="${PREFERED_EDITOR:-vim}"
  fi
  $editor $selection
}

