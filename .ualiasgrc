# Trim utilities
nospace () {
  tr -d "[:space:]"
}

ltrim () {
  sed -E 's/^[[:space:]]*//'
}

rtrim () {
  sed -E 's/[[:space:]]*$//'
}

trim () {
  ltrim | rtrim
}

# Open temp file on vim
ntemp () {
  nvim "/temp/temp-$(uuidgen 2>/dev/null || date +%d-%m-%Y_%H-%M-%S).txt"
}

# extract files
ex () {
  if [ -f "$1" ]; then
    case $1 in
      *.tar.bz2)    tar xjvf $1;;
      *.tar.gz)     tar xzvf $1;;
      *.bz2)        bunzip2 $1;;
      *.rar)        unrar x $1;;
      *.gz)         gunzip $1;;
      *.tar)        tar xvf $1;;
      *.tbz2)       tar xjvf $1;;
      *.tgz)        tar xzvf $1;;
      *.zip)        unzip $1;;
      *.Z)          uncompress $1;;
      *.7z)         7z x $1;;
      *.deb)        ar x $1;;
      *.tar.xz)     tar xvf $1;;
      *.tar.zst)    unzstd $1;;
      *)            echo "'$1' cannot be extracted via ex()!";;
    esac
  else
    echo "'$1' is not a file"
  fi
}

