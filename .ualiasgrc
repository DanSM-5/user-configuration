fcd () {
  local depth="$1"
  local selection=""
  if [ -z "$depth" ] || [ "$depth" = 0 ]; then
    depth=1
  fi

  selection=$(fd -td -d "$depth" | fzf --preview "ls --color=auto -alhF {} | awk '{ if (!(\$9 == \"./\" || \$9 == \"../\")) print }'")
  if [ -n "$selection" ]; then
    cd $selection
  fi
}
# List folders for quick navigation
# Requires: quick_access=()
qnv () {
  if [ -z "$quick_access" ]; then
    return
  fi
  local selection=$(echo $quick_access | fzf --preview "ls --color=auto -alhF {} | awk '{ if (!(\$9 == \"./\" || \$9 == \"../\")) print}'")
  if [ -n "$selection" ]; then
    cd $selection
  fi
}
# List files for quick edit
# Requires: quick_edit
qed () {
  if [ -z "$quick_edit" ]; then
    return
  fi
  local editor="$1"
  local selection=$(echo $quick_edit | fzf --preview "bat --color=always {}")
  if [ -z "$selection" ]; then
    return
  fi
  if [ -z "$editor" ]; then
    editor="nvim"
  fi
  $editor $selection
}
