ptc () {
  local location="${1:-.}" # Current location
  local query="${@:2}"
  local pattern="."
  local selection=""

  if ! [ -d "$location" ]; then
    pattern="$location"
    location="$HOME"
  fi

  # old preview "ls --color=always -alhF {} | sed '1d;2d;3d'"
  # NOTE: cat - <() is there to add '.' as an option in the pipe
  selection=$(fd-defaults -tl -td -tf -L "$pattern" "$location" |
    cat <(echo '.') - |
    fzf-defaults --query "$query" \
      --header "(ctrl-/) Search in: $location" \
      --preview "$fzf_preview_normal")
  if [ -z "$selection" ]; then
    return 1
  fi

  selection="$(realpath "$selection")"

  echo "$selection" | clipboard_copyw
}

