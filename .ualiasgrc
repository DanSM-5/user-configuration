# List folders for quick navigation
# Requires: quick_access=()
qnv () {
  if [ -z "$quick_access" ]; then
    return
  fi
  local selection=$(printf "%s\n" "${quick_access[@]}" |
    fzf-defaults --preview "$fzf_preview_normal")

  if [ -n "$selection" ]; then
    cd $selection
  fi
}

# List files for quick edit
# Requires: quick_edit
qed () {
  if [ -z "$quick_edit" ]; then
    return
  fi
  local editor="$1"
  local selection=$(printf "%s\n" "${quick_edit[@]}" |
    fzf-defaults --preview "$fzf_preview_file")

  if ! [ -f "$selection" ]; then
    return
  fi
  if [ -z "$editor" ]; then
    editor="${PREFERED_EDITOR:-vim}"
  fi
  $editor $selection
}

