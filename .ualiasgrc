# Wrapper for ytfzf to launch on windows mpv player
mpvl () {
  local selection=$(ytfzf -L "$@")
  if [ -n "$selection" ]; then
    "$mpv_commd" "$selection"
  fi
}

yf () {
  # Set starting page with flag -p[n]
  local startpage=1
  local direct_play=false
  local selection=""
  for arg do
    shift
    if [[ "$arg" =~ "-p[0-9]+" ]]; then
      # Remove -p arg and use value as pages_start
      startpage="${arg:2}"
      continue
    elif [[ "$arg" = "--direct-play" ]]; then
      direct_play=true
      continue
    fi
    set -- "$@" "$arg"
  done

  if [[ "$direct_play" = true ]]; then
    selection="$(pages_start="$startpage" ytfzf -L "$@")"

    if [ -z "$selection" ]; then
      return 1 
    fi

    mpvp "$selection"
    return
  fi

  pages_start="$startpage" ytfzf "$@"
}

yfd () {
  yf --direct-play "$@"
}

play () {
  local url="$("$clipboard_paste")"
  if [ -z "$url" ]; then
    echo "No url in clipboard"
    return 1
  fi

  if [[ "$url" =~ ".torrent" ]] ||
    [[ "$url" =~ "magnet:" ]] ||
    [[ "$url" =~ "webtorrent://" ]] ||
    [[ "$url" =~ "peerflix://" ]]; then
    webtorrentw --mpv "$url"
  else
    mpvw "$url"
  fi
}

plpp () {
  local url="$("$clipboard_paste")"
  if [ -z "$url" ]; then
    echo "No url in clipboard"
    return 1
  fi
  mpvp "$url"
}

tplay () {
  local url="$("$clipboard_paste")"
  if [ -z "$url" ]; then
    echo "No url in clipboard"
    return 1
  fi
  webtorrentw --mpv "$url"
}

getClipboardPath () {
  local filepath="$("$clipboard_paste" | tr -d "\r\n")"

  if [ -z "$filepath" ]; then
    echo ""
    return
  fi

  if ! [[ -f "$filepath" ]] && ! [[ -d "$filepath" ]]; then
    echo ""
    return
  fi

  echo "$(realpath "$filepath")"
}

ccd () {
  local filepath="$(getClipboardPath)"

  if [[ -z "$filepath" ]]; then
    echo "None or wrong path provided"
    return 1
  fi

  cd "$filepath"
}

ocd () {
  local filepath="$(getClipboardPath)"

  if [[ -z "$filepath" ]]; then
    echo "None or wrong path provided"
    return 1
  fi

  file_explorer_open "$filepath"
}

