  elif [ "$IS_MAC" = true ]; then

    clipboard_copy="pbcopy"
    clipboard_paste="pbpaste"

  fi
fi

fmpv () {
  local initial="$@"
  local selection="$(fd -tf | fzf -m --height 50% --min-height 20 --border -q "$initial")"
  if [ -z "$selection" ]; then
    return
  fi
  local quoted=$(echo $selection | awk '{ printf "\"""%s""\""" ", $0 }')
  bash -c "$mpv_commd $quoted"
}

ptc () {
  local location="${1:-$HOME}"
  local query="${@:2}"
  local pattern="."
  local selection=""

  if ! [ -d "$location" ]; then
    pattern="$location"
    location="$HOME"
  fi

  # old preview "ls --color=always -alhF {} | sed '1d;2d;3d'"
  selection=$(fd-defaults -tl -td -tf -L "$pattern" "$location" |
    fzf-defaults --query "$query" \
      --header "(ctrl-/) Search in: $location" \
      --preview "if [ -f {} ]; then bat -pp --color=always --style=numbers {}; else bat -pp --color=always <<< \$(echo \"Path: \$(realpath {})\"); ls --color=always -aFL  {} | sed '1d;2d'; fi")
  if [ -z "$selection" ]; then
    return 1
  fi
  
  selection="$(realpath "$selection")"

  echo "$selection" | "$clipboard_copy"
}

