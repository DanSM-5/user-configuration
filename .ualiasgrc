yt-dlpw () {
  "$yt_dlp_commd" "$@"
}

mpvw () {
  "$mpv_commd" "$@"
}

webtorrentw () {
  webtorrent "$@"
}

mpvp () {
  # mpv play
  # declare url=${*:-$(</dev/stdin)}
  local use_stdin=false
  for arg do
    shift
    if [[ "$arg" = "-" ]]; then
      # Remove - arg
      use_stdin=true
      continue
    fi
    set -- "$@" "$arg"
  done

  if [ "$use_stdin" = true ]; then

    read -t 5 url
    if [ -z "$url" ]; then
      echo "No url provided"
      (exit 1) && true
    fi

    "$yt_dlp_commd" -o - "$url" | "$mpv_commd" --cache "${@:2}"  -
  elif [ -n "$1" ]; then
    "$yt_dlp_commd" -o - "$1" | "$mpv_commd" --cache "${@:2}"  -
  else
    echo "No url provided"
    (exit 1) && true
  fi
}

